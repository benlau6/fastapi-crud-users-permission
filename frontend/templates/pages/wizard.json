            },
            {
              "type": "static-date",
              "name": "date",
              "label": "舉辦時間",
              "labelClassName": "text-muted"
            },
            {
              "type": "static",
              "name": "num",
              "label": "參與人數",
              "labelClassName": "text-muted"
            },
            {
              "type": "static",
              "name": "company",
              "label": "公司名稱",
              "labelClassName": "text-muted"
            },
            {
              "type": "static",
              "name": "money",
              "label": "贊助金額",
              "labelClassName": "text-muted"
            }
          ]
        }
      ]
    }
  ]
